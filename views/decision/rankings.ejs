  <script>
    const rankings = <%- JSON.stringify(rankings.slice(0, 10)) %>;
    const allRankings = <%- JSON.stringify(rankings) %>;

    function getColor(score) {
      if (score >= 80) return '#00ff88';
      if (score >= 65) return '#4cc9f0';
      if (score >= 50) return '#ffc107';
      return '#ff9800';
    }

    // Bar Chart
    new Chart(document.getElementById('barChart'), {
      type: 'bar',
      data: {
        labels: rankings.map(c => c.ulke_adi),
        datasets: [{
          data: rankings.map(c => c.totalScore),
          backgroundColor: rankings.map(c => getColor(c.totalScore) + '99'),
          borderColor: rankings.map(c => getColor(c.totalScore)),
          borderWidth: 2,
          borderRadius: 6
        }]
      },
      options: {
        indexAxis: 'y',
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { display: false } },
        scales: {
          x: { 
            beginAtZero: true, max: 100,
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: { color: 'rgba(255,255,255,0.5)' }
          },
          y: { 
            grid: { display: false },
            ticks: { color: 'rgba(255,255,255,0.7)' }
          }
        }
      }
    });

    // Pie Chart
    const dist = {
      'Ã‡ok Uygun': allRankings.filter(c => c.totalScore >= 80).length,
      'Uygun': allRankings.filter(c => c.totalScore >= 65 && c.totalScore < 80).length,
      'Potansiyel': allRankings.filter(c => c.totalScore >= 50 && c.totalScore < 65).length,
      'Riskli': allRankings.filter(c => c.totalScore < 50).length
    };

    new Chart(document.getElementById('pieChart'), {
      type: 'doughnut',
      data: {
        labels: Object.keys(dist),
        datasets: [{
          data: Object.values(dist),
          backgroundColor: ['#00ff8899', '#4cc9f099', '#ffc10799', '#ff980099'],
          borderColor: ['#00ff88', '#4cc9f0', '#ffc107', '#ff9800'],
          borderWidth: 2
        }]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: {
          legend: { 
            position: 'bottom',
            labels: { color: 'rgba(255,255,255,0.7)', padding: 15 }
          }
        }
      }
    });
  </script>
