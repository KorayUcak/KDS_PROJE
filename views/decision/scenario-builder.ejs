      `).join('');
    }

    // ==================== RESET FILTERS ====================
    function resetFilters() {
      document.getElementById('regulatorySlider').value = 100;
      document.getElementById('culturalSlider').value = 0;
      document.getElementById('digitalSlider').value = 0;
      document.getElementById('distanceSlider').value = 20000;
      document.getElementById('taxSlider').value = 40;
      document.getElementById('competitionSlider').value = 100;
      document.getElementById('youthSlider').value = 0;
      document.getElementById('eobSlider').value = 0;
      
      // Update displayed values
      sliders.forEach(slider => {
        const el = document.getElementById(slider.id);
        const valueEl = document.getElementById(slider.valueId);
        valueEl.textContent = el.value + slider.suffix;
      });
    }

    // ==================== EVENT LISTENERS ====================
    document.getElementById('applyBtn').addEventListener('click', applyFilters);
    document.getElementById('resetBtn').addEventListener('click', resetFilters);
    
    // Auto-apply when sector changes
    document.getElementById('sektorSelect').addEventListener('change', applyFilters);

    // ==================== INIT ====================
    initMap();
  </script>
