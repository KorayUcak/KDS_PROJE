  <!-- TOAST NOTIFICATION -->
  <div id="toast" class="toast"></div>

  <script>
    // Data from server
    const countryData = {
      ulke_id: <%= country.ulke_id %>,
      ulke_adi: '<%= country.ulke_adi %>',
      ISO_KODU: '<%= country.ISO_KODU || "" %>'
    };
    
    const sectorData = {
      sektor_id: <%= sector.sektor_id %>,
      sektor_adi: '<%= sector.sektor_adi %>'
    };
    
    const calculatedScore = <%= score || 0 %>;
    
    const strategicDecisions = <%- JSON.stringify(strategicDecisions) %>;
    const advancedMetrics = <%- JSON.stringify(advancedMetrics) %>;

    // Character counter
    const noteTextarea = document.getElementById('yonetici_notu');
    const charCount = document.getElementById('charCount');
    
    noteTextarea.addEventListener('input', () => {
      charCount.textContent = noteTextarea.value.length;
      if (noteTextarea.value.length >= 10) {
        charCount.style.color = 'var(--accent-green)';
      } else {
        charCount.style.color = 'var(--accent-red)';
      }
    });

    // Form submission
    const form = document.getElementById('strategyForm');
    const commitBtn = document.getElementById('commitBtn');
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const karar_durumu = document.getElementById('karar_durumu').value;
      const yonetici_notu = document.getElementById('yonetici_notu').value;
      
      // Validation
      if (!karar_durumu) {
        showToast('L√ºtfen karar durumu se√ßin', 'error');
        return;
      }
      
      if (yonetici_notu.length < 10) {
        showToast('Y√∂netici notu en az 10 karakter olmalƒ±dƒ±r', 'error');
        return;
      }
      
      // Collect overrides
      const user_overrides = {};
      const overrideFields = ['entry', 'pricing', 'logistics', 'marketing'];
      overrideFields.forEach(field => {
        const val = document.getElementById(`override_${field}`).value;
        if (val) user_overrides[field] = val;
      });
      
      // Prepare payload
      const payload = {
        ulke_id: countryData.ulke_id,
        ulke_adi: countryData.ulke_adi,
        sektor_id: sectorData.sektor_id,
        sektor_adi: sectorData.sektor_adi,
        hesaplanan_skor: calculatedScore,
        karar_durumu,
        yonetici_notu,
        strategic_decisions: strategicDecisions,
        advanced_metrics: advancedMetrics,
        user_overrides
      };
      
      // Show loading
      commitBtn.disabled = true;
      commitBtn.innerHTML = '<span class="loading-spinner"></span> Kaydediliyor...';
      
      try {
        const response = await fetch('/api/strategy', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(payload)
        });
        
        const result = await response.json();
        
        if (response.ok && result.status === 'success') {
          showToast('‚úÖ Strateji ba≈üarƒ±yla kaydedildi!', 'success');
          
          // Redirect after short delay
          setTimeout(() => {
            window.location.href = '/decisions';
          }, 1500);
        } else {
          throw new Error(result.message || 'Kayƒ±t ba≈üarƒ±sƒ±z');
        }
      } catch (error) {
        showToast('‚ùå ' + error.message, 'error');
        commitBtn.disabled = false;
        commitBtn.innerHTML = 'üíæ STRATEJƒ∞Yƒ∞ VERƒ∞TABANINA KAYDET';
      }
    });

    // Toast function
    function showToast(message, type = 'success') {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.className = `toast ${type} show`;
      
      setTimeout(() => {
        toast.classList.remove('show');
      }, 4000);
    }
  </script>
</body>
