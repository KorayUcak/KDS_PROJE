  <script>
    // ==================== STATE ====================
    let map;
    let markers = [];
    let allCountries = [];
    let filteredCountries = [];
    let selectedCountry = null;
    let selectedSector = null;
    let analyzedCountries = new Set();
    let charts = {};

    // ==================== MOCK DATA GENERATOR ====================
    function generateMockData(country) {
      const seed = (country.ulke_id || 1) * 1234;
      const random = (min, max) => {
        const x = Math.sin(seed + min) * 10000;
        return min + (x - Math.floor(x)) * (max - min);
      };
      
      return {
        politicalStability: Math.round(random(3, 10)),
        digitalInfrastructure: random(0, 1) > 0.6 ? 'high' : random(0, 1) > 0.3 ? 'medium' : 'low',
        corporateTax: Math.round(random(10, 35)),
        currencyVolatility: random(0, 1) > 0.7 ? 'high' : 'low',
        tariffRate: Math.round(random(2, 15)),
        laborCost: Math.round(random(500, 4000)),
        competitorIndex: Math.round(random(20, 80)),
        internetUsage: Math.round(random(40, 95)),
        easeOfBusiness: Math.round(random(40, 90))
      };
    }

    // ==================== SWOT ANALYSIS GENERATOR ====================
    function generateSWOT(country) {
      if (!country) return { strengths: [], weaknesses: [], opportunities: [], threats: [] };

      const mock = generateMockData(country);
      const lpi = parseFloat(country.lpi_skoru || country.lpi_skoru_ham || 0);
      const gdp = parseFloat(country.gsyh_kisi_basi || country.gsyh_kisi_basi_usd || 0);
      const inflation = parseFloat(country.enflasyon || country.enflasyon_orani_yuzde || 0);
      const customs = parseFloat(country.gumruk_suresi || country.gumruk_bekleme_suresi_gun || 99);
      const localProd = parseFloat(country.yerli_uretim_orani || country.yerli_uretim_karsilama_orani_yuzde || 0);
      const population = parseFloat(country.nufus_milyon || 0);
      const growth = parseFloat(country.sektorel_buyume || country.sektorel_buyume_orani_yuzde || 0);
      const agreements = parseInt(country.anlasma_sayisi || 0);
      const riskNotu = country.risk_notu || country.risk_notu_kodu || 'C';

      const strengths = [];
      const weaknesses = [];
      const opportunities = [];
      const threats = [];

      // STRENGTHS (Internal Positives)
      if (lpi >= 3.8) strengths.push('Yüksek Lojistik Altyapısı (LPI: ' + lpi.toFixed(1) + ')');
      if (customs <= 3) strengths.push('Hızlı Gümrük İşlemleri (' + customs + ' gün)');
      if (agreements >= 2) strengths.push('Aktif Ticaret Anlaşmaları (' + agreements + ' adet)');
      if (mock.easeOfBusiness >= 70) strengths.push('İş Yapma Kolaylığı Yüksek');
      if (mock.politicalStability >= 7) strengths.push('Politik İstikrar Güçlü');
      if (['AAA', 'AA', 'A'].some(r => riskNotu.startsWith(r))) strengths.push('Düşük Ülke Riski (' + riskNotu + ')');
      if (strengths.length === 0) strengths.push('Belirgin avantaj tespit edilmedi');

      // WEAKNESSES (Internal Negatives)
      if (lpi < 2.5) weaknesses.push('Zayıf Lojistik Altyapısı (LPI: ' + lpi.toFixed(1) + ')');
      if (customs > 15) weaknesses.push('Yavaş Gümrük Süreçleri (' + customs + ' gün)');
      if (['CCC', 'CC', 'C', 'D'].some(r => riskNotu.includes(r))) weaknesses.push('Yüksek Ülke Riski (' + riskNotu + ')');
      if (mock.corporateTax > 30) weaknesses.push('Yüksek Kurumlar Vergisi (%' + mock.corporateTax + ')');
      if (mock.easeOfBusiness < 40) weaknesses.push('Bürokratik Engeller');
      if (weaknesses.length === 0) weaknesses.push('Kritik zayıflık tespit edilmedi');

      // OPPORTUNITIES (External Positives)
      if (growth >= 5) opportunities.push('Yüksek Sektörel Büyüme (%' + growth.toFixed(1) + ')');
      if (population >= 50) opportunities.push('Geniş Pazar Potansiyeli (' + population.toFixed(0) + 'M nüfus)');
      if (localProd < 40) opportunities.push('Düşük Yerel Rekabet (%' + localProd.toFixed(0) + ' yerli üretim)');
      if (gdp >= 30000) opportunities.push('Yüksek Satın Alma Gücü ($' + gdp.toLocaleString() + ')');
      if (mock.internetUsage >= 70) opportunities.push('Dijital Pazarlama Potansiyeli');
      if (opportunities.length === 0) opportunities.push('Belirgin fırsat tespit edilmedi');

      // THREATS (External Negatives)
      if (inflation > 10) threats.push('Yüksek Enflasyon Riski (%' + inflation.toFixed(1) + ')');
      if (localProd >= 80) threats.push('Doymuş Pazar (%' + localProd.toFixed(0) + ' yerli üretim)');
      if (mock.currencyVolatility === 'high') threats.push('Kur Dalgalanma Riski');
      if (mock.competitorIndex > 60) threats.push('Yoğun Rekabet Ortamı');
      if (mock.politicalStability < 4) threats.push('Politik İstikrarsızlık');
      if (threats.length === 0) threats.push('Kritik tehdit tespit edilmedi');

      return { strengths, weaknesses, opportunities, threats };
    }

    // Update SWOT Analysis display
    function updateSWOTAnalysis() {
      // Get the top country (or selected country)
      const topCountry = selectedCountry || (filteredCountries.length > 0 ? filteredCountries[0] : null);
      
      if (!topCountry) {
        document.getElementById('swotCountryName').textContent = 'Ülke seçiniz';
        document.getElementById('swotCountryScore').textContent = '--';
        return;
      }

      const swot = generateSWOT(topCountry);
      const countryName = topCountry.ulke_adi || 'Bilinmeyen';
      const score = topCountry.totalScore || topCountry.unifiedScore || 0;

      // Update header
      document.getElementById('swotCountryName').textContent = countryName + ' SWOT';
      document.getElementById('swotCountryScore').textContent = Math.round(score) + '/100';

      // Update SWOT lists
      document.getElementById('swotStrengths').innerHTML = swot.strengths.map(s => `<li>${s}</li>`).join('');
      document.getElementById('swotWeaknesses').innerHTML = swot.weaknesses.map(w => `<li>${w}</li>`).join('');
      document.getElementById('swotOpportunities').innerHTML = swot.opportunities.map(o => `<li>${o}</li>`).join('');
      document.getElementById('swotThreats').innerHTML = swot.threats.map(t => `<li>${t}</li>`).join('');
    }

    // ==================== DECISION ENGINE ====================
    function generateDecisions(country) {
      const mock = generateMockData(country);
      const decisions = [];

      // 1. Logistics Strategy
      const lpi = parseFloat(country.lpi_skoru || 2.5);
      const logistics = lpi >= 3.5 ? 
        { status: 'go', verdict: 'Deniz Yolu Önerilir', reason: 'Yüksek LPI skoru, liman altyapısı güçlü.' } :
        lpi >= 2.5 ?
        { status: 'caution', verdict: 'Kara/Demiryolu Değerlendir', reason: 'Orta düzey altyapı, alternatif rotalar planlayın.' } :
        { status: 'stop', verdict: 'Hava Kargo Zorunlu', reason: 'Düşük LPI, liman gecikmeleri yüksek risk.' };
      decisions.push({ num: 1, title: 'Lojistik Stratejisi', ...logistics });

      // 2. Market Entry Mode
      const localProd = parseFloat(country.yerli_uretim_orani || 50);
      const entry = localProd < 40 ?
        { status: 'go', verdict: 'Doğrudan Yatırım', reason: 'Düşük yerel üretim, pazar açık.' } :
        localProd < 70 ?
        { status: 'caution', verdict: 'Joint Venture', reason: 'Orta rekabet, yerel ortak önerilir.' } :
        { status: 'stop', verdict: 'Sadece Distribütörlük', reason: 'Yüksek yerel üretim, doğrudan giriş riskli.' };
      decisions.push({ num: 2, title: 'Pazar Giriş Modu', ...entry });

      // 3. Customs & Compliance
      const agreements = country.anlasma_sayisi || 0;
      const customs = parseInt(country.gumruk_suresi || 15);
      const compliance = agreements > 2 && customs < 7 ?
        { status: 'go', verdict: 'Yeşil Hat Uygun', reason: `${agreements} anlaşma, ${customs} gün gümrük.` } :
        customs < 15 ?
        { status: 'caution', verdict: 'Standart Prosedür', reason: 'Normal gümrük süreci bekleniyor.' } :
        { status: 'stop', verdict: 'Yüksek Bürokrasi', reason: 'Uzun gümrük süreleri, ek maliyetler.' };
      decisions.push({ num: 3, title: 'Gümrük & Uyum', ...compliance });

      // 4. Pricing Policy
      const gdp = parseFloat(country.gsyh_kisi_basi || 10000);
      const pricing = gdp > 40000 ?
        { status: 'go', verdict: 'Premium Fiyatlama', reason: 'Yüksek satın alma gücü.' } :
        gdp > 15000 ?
        { status: 'caution', verdict: 'Değer Bazlı Fiyatlama', reason: 'Orta gelir, rekabetçi fiyat.' } :
        { status: 'stop', verdict: 'Penetrasyon Stratejisi', reason: 'Düşük gelir, hacim odaklı.' };
      decisions.push({ num: 4, title: 'Fiyatlama Politikası', ...pricing });

      // 5. Marketing Channel
      const digital = mock.internetUsage > 70 ?
        { status: 'go', verdict: 'Dijital Öncelikli', reason: `%${mock.internetUsage} internet kullanımı.` } :
        mock.internetUsage > 45 ?
        { status: 'caution', verdict: 'Hibrit Kanal', reason: 'Dijital + geleneksel.' } :
        { status: 'stop', verdict: 'Geleneksel Perakende', reason: 'Düşük dijital penetrasyon.' };
      decisions.push({ num: 5, title: 'Pazarlama Kanalı', ...digital });

      // 6. Financial Hedging
      const inflation = parseFloat(country.enflasyon || 5);
      const finance = inflation < 5 && mock.currencyVolatility === 'low' ?
        { status: 'go', verdict: 'Açık Hesap Uygun', reason: 'Düşük enflasyon, stabil kur.' } :
        inflation < 15 ?
        { status: 'caution', verdict: 'Akreditif Önerilir', reason: 'Orta risk, banka garantisi.' } :
        { status: 'stop', verdict: 'Ön Ödeme Zorunlu', reason: 'Yüksek enflasyon riski.' };
      decisions.push({ num: 6, title: 'Finansal Koruma', ...finance });

      // 7. Expansion Speed
      const growth = parseFloat(country.sektorel_buyume || 0);
      const expansion = mock.easeOfBusiness > 70 && growth > 5 ?
        { status: 'go', verdict: 'Agresif Genişleme', reason: `%${growth.toFixed(1)} büyüme, kolay iş.` } :
        mock.easeOfBusiness > 50 ?
        { status: 'caution', verdict: 'Kademeli Genişleme', reason: 'Kontrollü büyüme stratejisi.' } :
        { status: 'stop', verdict: 'Pilot Proje Önce', reason: 'Zor iş ortamı, test gerekli.' };
      decisions.push({ num: 7, title: 'Genişleme Hızı', ...expansion });

      return decisions;
    }

