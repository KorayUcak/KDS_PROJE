    // ==================== RENDER GAUGE ====================
    function renderGauge(score) {
      document.getElementById('gaugeSection').style.display = 'block';
      const ctx = document.getElementById('gaugeChart');
      
      if (charts.gauge) charts.gauge.destroy();
      
      const color = score >= 70 ? '#00ff88' : score >= 50 ? '#ffaa00' : '#ff4466';
      
      charts.gauge = new Chart(ctx, {
        type: 'doughnut',
        data: {
          datasets: [{
            data: [score, 100 - score],
            backgroundColor: [color, '#1a1d24'],
            borderWidth: 0,
            circumference: 180,
            rotation: 270
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          cutout: '75%',
          plugins: { legend: { display: false }, tooltip: { enabled: false } }
        },
        plugins: [{
          id: 'gaugeText',
          afterDraw: (chart) => {
            const { ctx, width, height } = chart;
            ctx.save();
            ctx.font = 'bold 28px Inter';
            ctx.fillStyle = color;
            ctx.textAlign = 'center';
            ctx.fillText(score.toFixed(0), width / 2, height - 5);
            ctx.restore();
          }
        }]
      });
    }

    // ==================== EVENT LISTENERS ====================
    function setupEventListeners() {
      // Slider configurations with their corresponding checkboxes
      const sliderConfigs = [
        { id: 'costFilter', valId: 'costVal', checkId: 'costActive', groupId: 'costFilterGroup', format: v => `$${Number(v).toLocaleString()}` },
        { id: 'customsFilter', valId: 'customsVal', checkId: 'customsActive', groupId: 'customsFilterGroup', format: v => `${v} gün` },
        { id: 'gdpFilter', valId: 'gdpVal', checkId: 'gdpActive', groupId: 'gdpFilterGroup', format: v => `$${Number(v).toLocaleString()}` },
        { id: 'lpiFilter', valId: 'lpiVal', checkId: 'lpiActive', groupId: 'lpiFilterGroup', format: v => v },
        { id: 'politicsFilter', valId: 'politicsVal', checkId: 'politicsActive', groupId: 'politicsFilterGroup', format: v => `${v}/10` },
        { id: 'taxFilter', valId: 'taxVal', checkId: 'taxActive', groupId: 'taxFilterGroup', format: v => `${v}%` }
      ];

      // Setup slider input listeners
      sliderConfigs.forEach(cfg => {
        const slider = document.getElementById(cfg.id);
        const valEl = document.getElementById(cfg.valId);
        
        slider.addEventListener('input', () => {
          valEl.textContent = cfg.format(slider.value);
          filterCountries();
        });
      });

      // Setup checkbox toggle listeners
      sliderConfigs.forEach(cfg => {
        const checkbox = document.getElementById(cfg.checkId);
        const slider = document.getElementById(cfg.id);
        const group = document.getElementById(cfg.groupId);
        
        checkbox.addEventListener('change', () => {
          // Enable/disable the slider based on checkbox state
          slider.disabled = !checkbox.checked;
          
          // Add/remove active class for visual feedback
          if (checkbox.checked) {
            group.classList.add('active');
          } else {
            group.classList.remove('active');
          }
          
          // Re-filter
          filterCountries();
        });
      });

      // Digital filter checkbox
      const digitalCheckbox = document.getElementById('digitalActive');
      const digitalSelect = document.getElementById('digitalFilter');
      const digitalGroup = document.getElementById('digitalFilterGroup');
      
      digitalCheckbox.addEventListener('change', () => {
        digitalSelect.disabled = !digitalCheckbox.checked;
        if (digitalCheckbox.checked) {
          digitalGroup.classList.add('active');
        } else {
          digitalGroup.classList.remove('active');
        }
        filterCountries();
      });
      
      digitalSelect.addEventListener('change', filterCountries);
      
      // Reset button
      document.getElementById('resetBtn').addEventListener('click', () => {
        // Reset slider values
        document.getElementById('costFilter').value = 5000;
        document.getElementById('customsFilter').value = 30;
        document.getElementById('gdpFilter').value = 0;
        document.getElementById('lpiFilter').value = 1;
        document.getElementById('politicsFilter').value = 1;
        document.getElementById('taxFilter').value = 40;
        document.getElementById('digitalFilter').value = 'all';
        
        // Uncheck all checkboxes and disable sliders
        sliderConfigs.forEach(cfg => {
          const checkbox = document.getElementById(cfg.checkId);
          const slider = document.getElementById(cfg.id);
          const valEl = document.getElementById(cfg.valId);
          const group = document.getElementById(cfg.groupId);
          
          checkbox.checked = false;
          slider.disabled = true;
          group.classList.remove('active');
          valEl.textContent = cfg.format(slider.value);
        });
        
        // Reset digital filter
        digitalCheckbox.checked = false;
        digitalSelect.disabled = true;
        digitalGroup.classList.remove('active');
        
        filterCountries();
      });

      // Sector Change - Auto Analysis
      document.getElementById('sectorSelect').addEventListener('change', function() {
        analyze();
        updateSectorPulse(this.value);
      });

      // Panel Toggle
      document.getElementById('panelToggle').addEventListener('click', () => {
        const panel = document.getElementById('decisionsPanel');
        const toggle = document.getElementById('panelToggle');
        panel.classList.toggle('hidden');

        toggle.innerHTML = panel.classList.contains('hidden')
          ? '<i data-lucide="chevron-right" class="lucide"></i>'
          : '<i data-lucide="chevron-left" class="lucide"></i>';

        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        }
      });

      // Save Modal
      document.getElementById('saveBtn').addEventListener('click', openSaveModal);
      document.getElementById('modalClose').addEventListener('click', closeSaveModal);
      document.getElementById('cancelSave').addEventListener('click', closeSaveModal);
      document.getElementById('confirmSave').addEventListener('click', saveDecision);
    }

    // ==================== ANALYZE ====================
    // Global sector weights state
    let currentSectorWeights = {
      logistics: 25,
      cost: 20,
      market: 25,
      economy: 15,
      growth: 15
    };

    async function analyze() {
      const sectorId = document.getElementById('sectorSelect').value;
      const sectorName = sectorId ? 
        document.getElementById('sectorSelect').options[document.getElementById('sectorSelect').selectedIndex].text :
        'Tüm Sektörler';
      
      selectedSector = {
        id: sectorId || 'all',
        name: sectorName
      };

      // Fetch sector intelligence (weights, stats, insight)
      await updateSectorIntelligence(sectorId, sectorName);

      if (!sectorId) {
        await loadGlobalMarkets();
        return;
      }

      try {
        const response = await fetch(`/api/sector/${sectorId}/rankings`);
        const result = await response.json();

        if (result.status === 'success' && result.data.rankings) {
          allCountries = result.data.rankings;
          
          // Recalculate scores with new sector weights
          recalculateScoresWithWeights();
          
          filterCountries();
        }
      } catch (error) {
        console.error('Sector analysis failed:', error);
        await loadGlobalMarkets();
      }
    }

    // Fetch and display sector intelligence
    async function updateSectorIntelligence(sectorId, sectorName) {
      const pulseBar = document.getElementById('sectorPulseBar');
      
      if (!sectorId) {
        pulseBar.style.display = 'none';
        // Reset to balanced weights
        currentSectorWeights = { logistics: 25, cost: 20, market: 25, economy: 15, growth: 15 };
        return;
      }

      try {
        const response = await fetch(`/api/sector/${sectorId}/intelligence?name=${encodeURIComponent(sectorName)}`);
        const result = await response.json();

        if (result.status === 'success') {
          const data = result.data;
          
          // Update sector weights
          currentSectorWeights = data.weights;
          
          // Show pulse bar
          pulseBar.style.display = 'block';
          
          // Update UI elements
          document.getElementById('sectorIcon').textContent = data.archetype.icon;
          document.getElementById('sectorModeName').textContent = data.archetype.name;
          
          // Growth with trend indicator
          const growth = parseFloat(data.stats.avgGrowth) || 0;
          const growthEl = document.getElementById('sectorGrowth');
          growthEl.textContent = (growth >= 0 ? '+' : '') + growth.toFixed(1) + '%';
          growthEl.className = 'pulse-value ' + (growth >= 0 ? 'trend-up' : 'trend-down');
          
          document.getElementById('sectorVolume').textContent = data.stats.totalVolumeFormatted || '$0B';
          document.getElementById('sectorTopRegion').textContent = data.stats.topRegion || '-';
          
          // Update weight segments
          const total = Object.values(data.weights).reduce((a, b) => a + b, 0);
          document.getElementById('weightLogistics').style.width = (data.weights.logistics / total * 100) + '%';
          document.getElementById('weightCost').style.width = (data.weights.cost / total * 100) + '%';
          document.getElementById('weightMarket').style.width = (data.weights.market / total * 100) + '%';
          document.getElementById('weightEconomy').style.width = (data.weights.economy / total * 100) + '%';
          document.getElementById('weightGrowth').style.width = (data.weights.growth / total * 100) + '%';
          
          // Update insight text
          document.getElementById('sectorInsightText').innerHTML = data.insight || 'Sistem aktif.';
          
          // Show toast notification
          showSectorToast(data.archetype.name, data.insight);
        }
      } catch (error) {
        console.error('Sector intelligence fetch failed:', error);
        pulseBar.style.display = 'none';
      }
    }

    // Show sector change toast
    function showSectorToast(modeName, insight) {
      // Create a temporary toast for sector change
      const toast = document.getElementById('toast');
      const originalBg = toast.style.background;
      
      toast.style.background = 'linear-gradient(135deg, var(--accent), var(--cyan))';
      toast.innerHTML = `
        <span style="font-size: 16px;"><i data-lucide="target" class="lucide"></i></span>
        <span>"${selectedSector.name}" sektörü seçildi. <strong>${modeName}</strong> modu aktif.</span>
      `;
      toast.classList.add('show');

      if (typeof lucide !== 'undefined') {
        lucide.createIcons();
      }
      
      setTimeout(() => {
        toast.classList.remove('show');
        toast.style.background = originalBg;
      }, 4000);
    }

    // Recalculate country scores with current sector weights
    function recalculateScoresWithWeights() {
      allCountries = allCountries.map(country => {
        // Calculate weighted score based on sector archetype
        const lpi = parseFloat(country.lpi_skoru || country.lpi_skoru_ham || 2.5);
        const customs = parseFloat(country.gumruk_suresi || country.gumruk_bekleme_suresi_gun || 15);
        const cost = parseFloat(country.konteyner_maliyeti || country.konteyner_ihracat_maliyeti_usd || 2000);
        const gdp = parseFloat(country.gsyh_kisi_basi || country.gsyh_kisi_basi_usd || 10000);
        const growth = parseFloat(country.sektorel_buyume || country.sektorel_buyume_orani_yuzde || 0);
        const risk = country.risk_notu || country.risk_notu_kodu || 'BBB';
        
        // Normalize values to 0-100
        const logisticsScore = (lpi / 5 * 50) + Math.max(0, 50 - customs * 2);
        const costScore = Math.max(0, 100 - (cost - 500) / 40);
        const marketScore = Math.min(100, (gdp / 80000) * 100);
        const economyScore = getRiskScore(risk) * 100;
        const growthScore = Math.min(100, Math.max(0, growth * 10 + 50));
        
        // Apply sector weights
        const w = currentSectorWeights;
        const totalWeight = w.logistics + w.cost + w.market + w.economy + w.growth;
        
        const weightedScore = (
          logisticsScore * (w.logistics / totalWeight) +
          costScore * (w.cost / totalWeight) +
          marketScore * (w.market / totalWeight) +
          economyScore * (w.economy / totalWeight) +
          growthScore * (w.growth / totalWeight)
        );
        
        return {
          ...country,
          sectorWeightedScore: Math.round(weightedScore),
          // Use sector weighted score as the main score
          totalScore: Math.round(weightedScore),
          unifiedScore: Math.round(weightedScore)
        };
      });
      
      // Re-sort by new score
      allCountries.sort((a, b) => (b.totalScore || 0) - (a.totalScore || 0));
    }

    // Helper: Risk code to numeric score
    function getRiskScore(riskNotu) {
      const riskScores = {
        'AAA': 1.0, 'AA+': 0.95, 'AA': 0.90, 'AA-': 0.85,
        'A+': 0.80, 'A': 0.75, 'A-': 0.70,
        'BBB+': 0.65, 'BBB': 0.60, 'BBB-': 0.55,
        'BB+': 0.50, 'BB': 0.45, 'BB-': 0.40,
        'B+': 0.35, 'B': 0.30, 'B-': 0.25,
        'CCC': 0.20, 'CC': 0.15, 'C': 0.10, 'D': 0.05
      };
      return riskScores[riskNotu] || 0.5;
    }

    // ==================== SAVE MODAL ====================
