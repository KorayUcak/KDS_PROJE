        { status: 'stop', verdict: 'Penetrasyon Stratejisi', reason: 'D√º≈ü√ºk gelir, hacim odaklƒ±.' };
      decisions.push({ num: 4, title: 'Fiyatlama Politikasƒ±', ...pricing });

