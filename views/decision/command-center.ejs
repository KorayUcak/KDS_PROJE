          <div class="value">${selectedSector?.name || 'Genel'}</div>
        </div>
        <div class="summary-item">
          <div class="label">Uygunluk Skoru</div>
          <div class="value" style="color:var(--accent)">${(selectedCountry.totalScore || 0).toFixed(0)}/100</div>
