        { status: 'stop', verdict: 'Y√ºksek B√ºrokrasi', reason: 'Uzun g√ºmr√ºk s√ºreleri, ek maliyetler.' };
      decisions.push({ num: 3, title: 'G√ºmr√ºk & Uyum', ...compliance });

      // 4. Pricing Policy
      const gdp = parseFloat(country.gsyh_kisi_basi || 10000);
