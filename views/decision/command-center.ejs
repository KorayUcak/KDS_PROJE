      }

      // Find strongest and weakest dimensions
      const dimensions = ['Lojistik', 'Maliyet', 'Stabilite', 'Büyüme', 'Pazar Açıklığı', 'Dijital'];
      let strongest = { idx: 0, val: countryData[0], diff: countryData[0] - avgData.logistics };
      let weakest = { idx: 0, val: countryData[0], diff: countryData[0] - avgData.logistics };
      
      const avgValues = [avgData.logistics, avgData.cost, avgData.stability, avgData.growth, avgData.market, avgData.digital];
      
      countryData.forEach((val, i) => {
        const diff = val - avgValues[i];
        if (diff > strongest.diff) strongest = { idx: i, val, diff };
        if (diff < weakest.diff) weakest = { idx: i, val, diff };
      });

      const overallScore = countryData.reduce((a, b) => a + b, 0) / 6;
      const avgOverall = avgValues.reduce((a, b) => a + b, 0) / 6;
      
      let insightType = overallScore > avgOverall + 10 ? 'positive' : 
