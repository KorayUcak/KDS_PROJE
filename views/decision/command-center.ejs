    // ==================== FILTER COUNTRIES ====================
    function filterCountries() {
      const maxCost = parseInt(document.getElementById('costFilter').value);
      const maxCustoms = parseInt(document.getElementById('customsFilter').value);
      const minGdp = parseInt(document.getElementById('gdpFilter').value);
      const minLpi = parseFloat(document.getElementById('lpiFilter').value);
      const minPolitics = parseInt(document.getElementById('politicsFilter').value);
      const digitalLevel = document.getElementById('digitalFilter').value;
      const maxTax = parseInt(document.getElementById('taxFilter').value);

      filteredCountries = allCountries.filter(c => {
        const mock = generateMockData(c);
        
        const cost = parseFloat(c.konteyner_maliyeti || c.konteyner_ihracat_maliyeti_usd || 9999);
        const customs = parseFloat(c.gumruk_suresi || c.gumruk_bekleme_suresi_gun || 99);
        const gdp = parseFloat(c.gsyh_kisi_basi || c.gsyh_kisi_basi_usd || 0);
        const lpi = parseFloat(c.lpi_skoru || c.lpi_skoru_ham || 0);
        
        if (cost > maxCost) return false;
        if (customs > maxCustoms) return false;
        if (gdp < minGdp) return false;
        if (lpi < minLpi) return false;
        if (mock.politicalStability < minPolitics) return false;
        if (digitalLevel !== 'all' && mock.digitalInfrastructure !== digitalLevel) return false;
        if (mock.corporateTax > maxTax) return false;
        
        return true;
      });

      filteredCountries.sort((a, b) => (b.totalScore || 0) - (a.totalScore || 0));
      document.getElementById('matchCount').textContent = filteredCountries.length;
      
      updateAllVisuals();
    }

    // ==================== UPDATE ALL VISUALS ====================
    function updateAllVisuals() {
      updateMapMarkers();
      updateScatterChart();
      updateRadarChart();
      updateBarChart();
    }

    // ==================== UPDATE MAP MARKERS ====================
    function updateMapMarkers() {
      markers.forEach(m => map.removeLayer(m));
      markers = [];

      filteredCountries.forEach(c => {
        const lat = parseFloat(c.latitude);
        const lng = parseFloat(c.longitude);
        
        if (isNaN(lat) || isNaN(lng)) return;
        
        const score = c.totalScore || 0;
        const volume = Math.log10(Math.max(1, c.sektorel_ithalat || c.nufus_milyon || 10)) * 3;
        
        let color, animation;
        if (score >= 70) {
          color = '#00ff88';
          animation = 'pulseGreen';
        } else if (score >= 50) {
          color = '#ffaa00';
          animation = 'pulseYellow';
        } else {
          color = '#ff4466';
          animation = 'pulseRed';
        }

        if (analyzedCountries.has(c.ulke_id)) color = '#6b7280';

        const markerHtml = `
          <div style="
            width: ${volume + 10}px;
            height: ${volume + 10}px;
            background: ${color};
            border-radius: 50%;
            border: 2px solid rgba(255,255,255,0.8);
            animation: ${animation} 2s infinite;
            cursor: pointer;
            box-shadow: 0 0 12px ${color};
          "></div>
        `;

        const icon = L.divIcon({
          html: markerHtml,
          className: 'custom-marker',
          iconSize: [volume + 10, volume + 10],
          iconAnchor: [(volume + 10) / 2, (volume + 10) / 2]
        });

        const marker = L.marker([lat, lng], { icon }).addTo(map);
        marker.on('click', () => selectCountryOnMap(c));
        
        const tooltipContent = `
          <div style="min-width:160px">
            <strong style="font-size:14px;color:#e8eaed">${c.ulke_adi}</strong><br>
            <div style="font-size:11px;color:#6b7280;margin-top:4px">
              <span style="color:${color}">‚óè</span> Skor: <b style="color:#e8eaed">${score.toFixed(0)}</b><br>
              üí∞ GSYƒ∞H: $${c.gsyh_kisi_basi ? (c.gsyh_kisi_basi/1000).toFixed(0) + 'k' : 'N/A'}<br>
              üì¶ LPI: ${c.lpi_skoru?.toFixed(1) || 'N/A'}
            </div>
          </div>
        `;
        marker.bindTooltip(tooltipContent, { direction: 'top', offset: [0, -10] });

        markers.push(marker);
      });

      if (markers.length > 0 && !selectedCountry) {
        const group = new L.featureGroup(markers);
        map.fitBounds(group.getBounds().pad(0.15));
      }
    }

    // ==================== UPDATE SCATTER CHART ====================
    function updateScatterChart() {
      const data = filteredCountries.map(c => {
        const riskScore = { 'AAA': 100, 'AA': 85, 'A': 70, 'BBB': 55, 'BB': 40, 'B': 25 }[c.risk_notu] || 50;
        const opportunity = (c.sektorel_buyume || 0) * 5 + (100 - (c.yerli_uretim_orani || 50));
        return { x: riskScore, y: Math.min(100, opportunity) };
      });

      const colors = filteredCountries.map(c => {
        const score = c.totalScore || 0;
        if (score >= 70) return 'rgba(0,255,136,0.7)';
        if (score >= 50) return 'rgba(255,170,0,0.7)';
        return 'rgba(255,68,102,0.7)';
      });

      charts.scatter.data.datasets[0].data = data;
      charts.scatter.data.datasets[0].backgroundColor = colors;
      charts.scatter.data.datasets[0].borderColor = colors.map(c => c.replace('0.7', '1'));
      charts.scatter.update('none');
    }

    // ==================== UPDATE RADAR CHART ====================
    function updateRadarChart() {
      // Calculate average
      const avg = {
        logistics: 0,
        cost: 0,
        stability: 0,
        growth: 0,
        market: 0,
        digital: 0
      };

      filteredCountries.forEach(c => {
        const mock = generateMockData(c);
        avg.logistics += (c.lpi_skoru || 2.5) * 20;
        avg.cost += Math.max(0, 100 - ((c.konteyner_maliyeti || 1500) / 50));
        const riskScore = { 'AAA': 100, 'AA': 85, 'A': 70, 'BBB': 55, 'BB': 40, 'B': 25 }[c.risk_notu] || 50;
        avg.stability += riskScore;
        avg.growth += Math.min(100, (c.sektorel_buyume || 0) * 10 + 30);
        avg.market += Math.max(0, 100 - (c.yerli_uretim_orani || 50));
        avg.digital += mock.internetUsage;
      });

      const count = filteredCountries.length || 1;
      Object.keys(avg).forEach(k => avg[k] = avg[k] / count);

      charts.radar.data.datasets[0].data = [avg.logistics, avg.cost, avg.stability, avg.growth, avg.market, avg.digital];

      // Selected country
      if (selectedCountry) {
        const mock = generateMockData(selectedCountry);
        const riskScore = { 'AAA': 100, 'AA': 85, 'A': 70, 'BBB': 55, 'BB': 40, 'B': 25 }[selectedCountry.risk_notu] || 50;
        charts.radar.data.datasets[1].data = [
          (selectedCountry.lpi_skoru || 2.5) * 20,
          Math.max(0, 100 - ((selectedCountry.konteyner_maliyeti || 1500) / 50)),
          riskScore,
          Math.min(100, (selectedCountry.sektorel_buyume || 0) * 10 + 30),
          Math.max(0, 100 - (selectedCountry.yerli_uretim_orani || 50)),
          mock.internetUsage
        ];
      } else {
        charts.radar.data.datasets[1].data = [0, 0, 0, 0, 0, 0];
      }

      charts.radar.update('none');
    }

    // ==================== UPDATE BAR CHART ====================
    function updateBarChart() {
      const top5 = filteredCountries.slice(0, 5);
      
      charts.bar.data.labels = top5.map(c => c.ulke_adi?.substring(0, 12) || '?');
      charts.bar.data.datasets[0].data = top5.map(c => c.konteyner_maliyeti || 1000);
      charts.bar.data.datasets[1].data = top5.map(c => {
        const mock = generateMockData(c);
        return mock.tariffRate * 100;
      });
      charts.bar.data.datasets[2].data = top5.map(c => {
        const mock = generateMockData(c);
        return mock.corporateTax * 50;
      });
      
      charts.bar.update('none');
    }

    // ==================== SELECT COUNTRY ====================
    function selectCountryOnMap(country) {
      selectedCountry = country;
      document.getElementById('selectedCountry').textContent = country.ulke_adi;
      document.getElementById('saveBtn').disabled = false;
      
      map.setView([country.latitude, country.longitude], 5);
      
      renderDecisions(country);
      renderGauge(country.totalScore || 0);
      updateRadarChart();
    }

    // ==================== RENDER DECISIONS ====================
    function renderDecisions(country) {
      const decisions = generateDecisions(country);
      const list = document.getElementById('decisionsList');
      
      list.innerHTML = decisions.map(d => `
        <div class="decision-card ${d.status}">
          <div class="decision-header">
            <div class="decision-icon">${d.status === 'go' ? '‚úì' : d.status === 'caution' ? '!' : '‚úó'}</div>
            <span class="decision-num">Karar ${d.num}</span>
            <span class="decision-title">${d.title}</span>
          </div>
          <div class="decision-verdict">${d.verdict}</div>
          <div class="decision-reason">${d.reason}</div>
        </div>
      `).join('');
    }

    // ==================== RENDER GAUGE ====================
    function renderGauge(score) {
      document.getElementById('gaugeSection').style.display = 'block';
      const ctx = document.getElementById('gaugeChart');
      
      if (charts.gauge) charts.gauge.destroy();
      
      const color = score >= 70 ? '#00ff88' : score >= 50 ? '#ffaa00' : '#ff4466';
      
      charts.gauge = new Chart(ctx, {
        type: 'doughnut',
        data: {
          datasets: [{
            data: [score, 100 - score],
            backgroundColor: [color, '#1a1d24'],
            borderWidth: 0,
            circumference: 180,
            rotation: 270
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          cutout: '75%',
          plugins: { legend: { display: false }, tooltip: { enabled: false } }
        },
        plugins: [{
          id: 'gaugeText',
          afterDraw: (chart) => {
            const { ctx, width, height } = chart;
            ctx.save();
            ctx.font = 'bold 28px Inter';
            ctx.fillStyle = color;
            ctx.textAlign = 'center';
            ctx.fillText(score.toFixed(0), width / 2, height - 5);
            ctx.restore();
          }
        }]
      });
    }

    // ==================== EVENT LISTENERS ====================
    function setupEventListeners() {
      // Sliders
      const sliderConfigs = [
        { id: 'costFilter', valId: 'costVal', format: v => `$${Number(v).toLocaleString()}` },
        { id: 'customsFilter', valId: 'customsVal', format: v => `${v} g√ºn` },
        { id: 'gdpFilter', valId: 'gdpVal', format: v => `$${Number(v).toLocaleString()}` },
        { id: 'lpiFilter', valId: 'lpiVal', format: v => v },
        { id: 'politicsFilter', valId: 'politicsVal', format: v => `${v}/10` },
        { id: 'taxFilter', valId: 'taxVal', format: v => `${v}%` }
      ];

      sliderConfigs.forEach(cfg => {
        const slider = document.getElementById(cfg.id);
        const valEl = document.getElementById(cfg.valId);
        
        slider.addEventListener('input', () => {
          valEl.textContent = cfg.format(slider.value);
          filterCountries();
        });
      });

      document.getElementById('digitalFilter').addEventListener('change', filterCountries);
      
      // Reset
      document.getElementById('resetBtn').addEventListener('click', () => {
        document.getElementById('costFilter').value = 5000;
        document.getElementById('customsFilter').value = 30;
        document.getElementById('gdpFilter').value = 0;
        document.getElementById('lpiFilter').value = 1;
        document.getElementById('politicsFilter').value = 1;
        document.getElementById('taxFilter').value = 40;
        document.getElementById('digitalFilter').value = 'all';
        
        sliderConfigs.forEach(cfg => {
          const slider = document.getElementById(cfg.id);
          const valEl = document.getElementById(cfg.valId);
          valEl.textContent = cfg.format(slider.value);
        });
        
        filterCountries();
      });

      // Analyze
      document.getElementById('analyzeBtn').addEventListener('click', analyze);
      document.getElementById('sectorSelect').addEventListener('change', analyze);

      // Panel Toggle
      document.getElementById('panelToggle').addEventListener('click', () => {
        const panel = document.getElementById('decisionsPanel');
        const toggle = document.getElementById('panelToggle');
        panel.classList.toggle('hidden');
        toggle.textContent = panel.classList.contains('hidden') ? '‚ñ∂' : '‚óÄ';
      });

      // Save Modal
      document.getElementById('saveBtn').addEventListener('click', openSaveModal);
      document.getElementById('modalClose').addEventListener('click', closeSaveModal);
      document.getElementById('cancelSave').addEventListener('click', closeSaveModal);
      document.getElementById('confirmSave').addEventListener('click', saveDecision);
    }

    // ==================== ANALYZE ====================
    async function analyze() {
      const sectorId = document.getElementById('sectorSelect').value;
      
      selectedSector = {
        id: sectorId || 'all',
        name: sectorId ? 
          document.getElementById('sectorSelect').options[document.getElementById('sectorSelect').selectedIndex].text :
          'T√ºm Sekt√∂rler'
      };

      if (!sectorId) {
        await loadGlobalMarkets();
        return;
      }

      try {
        const response = await fetch(`/api/sector/${sectorId}/rankings`);
        const result = await response.json();

        if (result.status === 'success' && result.data.rankings) {
          allCountries = result.data.rankings;
          filterCountries();
        }
      } catch (error) {
        console.error('Sector analysis failed:', error);
        await loadGlobalMarkets();
      }
    }

    // ==================== SAVE MODAL ====================
    function openSaveModal() {
      if (!selectedCountry) return;
      
      const decisions = generateDecisions(selectedCountry);
      const goCount = decisions.filter(d => d.status === 'go').length;
      
      document.getElementById('summaryGrid').innerHTML = `
        <div class="summary-item">
          <div class="label">Hedef Pazar</div>
          <div class="value">${selectedCountry.ulke_adi}</div>
        </div>
        <div class="summary-item">
          <div class="label">Sekt√∂r</div>
          <div class="value">${selectedSector?.name || 'Genel'}</div>
        </div>
        <div class="summary-item">
          <div class="label">Uygunluk Skoru</div>
          <div class="value" style="color:var(--accent)">${(selectedCountry.totalScore || 0).toFixed(0)}/100</div>
        </div>
        <div class="summary-item">
          <div class="label">Olumlu Kararlar</div>
          <div class="value" style="color:var(--success)">${goCount}/7</div>
        </div>
      `;
      
      document.getElementById('modalOverlay').classList.add('show');
    }

    function closeSaveModal() {
      document.getElementById('modalOverlay').classList.remove('show');
    }

    async function saveDecision() {
      const status = document.getElementById('decisionStatus').value;
      const note = document.getElementById('managerNote').value;
      
      try {
        const response = await fetch('/api/decisions', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            ulke_id: selectedCountry.ulke_id,
            ulke_adi: selectedCountry.ulke_adi,
            sektor_id: selectedSector?.id,
            sektor_adi: selectedSector?.name,
            karar_durumu: status,
            yonetici_notu: note || 'Karar kaydedildi.',
            hesaplanan_skor: selectedCountry.totalScore || 0
          })
        });

        if (response.ok) {
          analyzedCountries.add(selectedCountry.ulke_id);
          updateMapMarkers();
          closeSaveModal();
          showToast('‚úì Strateji ba≈üarƒ±yla kaydedildi!');
        }
      } catch (error) {
        console.error('Save error:', error);
        showToast('Hata: Kaydedilemedi');
      }
    }

    function showToast(message) {
      const toast = document.getElementById('toast');
      toast.textContent = message;
      toast.classList.add('show');
      setTimeout(() => toast.classList.remove('show'), 3500);
    }

    // ==================== START ====================
    init();
  </script>
