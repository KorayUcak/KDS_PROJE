<%- include('../includes/dashboard-header') %>

<div class="dashboard-container">
  <div class="page-header">
    <h1>üìã Yeni Rapor Olu≈ütur</h1>
    <p class="page-subtitle">Sekt√∂r ve √ºlke bazlƒ± pazar ara≈ütƒ±rma raporu olu≈üturun</p>
  </div>

  <!-- ƒ∞statistik Kartlarƒ± -->
  <div class="stats-grid">
    <div class="stat-card">
      <div class="stat-icon">üåç</div>
      <div class="stat-content">
        <div class="stat-value"><%= countries.length %></div>
        <div class="stat-label">√úlke Se√ßeneƒüi</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üè≠</div>
      <div class="stat-content">
        <div class="stat-value"><%= sectors.length %></div>
        <div class="stat-label">Sekt√∂r Se√ßeneƒüi</div>
      </div>
    </div>
    <div class="stat-card">
      <div class="stat-icon">üìä</div>
      <div class="stat-content">
        <div class="stat-value">‚àû</div>
        <div class="stat-label">Analiz Kombinasyonu</div>
      </div>
    </div>
  </div>

  <section class="form-section">
    <div class="form-card">
      <form id="analysisForm" class="analysis-form">
        <!-- ADIM 1: Sekt√∂r Se√ßimi -->
        <div class="form-step">
          <h3 class="step-title">1Ô∏è‚É£ Sekt√∂r Se√ßimi</h3>
          <div class="form-group">
            <label for="sektor_id">Hedef Sekt√∂r *</label>
            <select id="sektor_id" name="sektor_id" required>
              <option value="">Sekt√∂r Se√ßiniz...</option>
              <% if (typeof sectors !== 'undefined' && sectors.length > 0) { %>
                <% sectors.forEach(function(sector) { %>
                  <option value="<%= sector.sektor_id %>"><%= sector.sektor_adi %></option>
                <% }); %>
              <% } %>
            </select>
          </div>
        </div>

        <!-- ADIM 2: √úlke Se√ßimi -->
        <div class="form-step">
          <h3 class="step-title">2Ô∏è‚É£ √úlke Se√ßimi</h3>
          <div class="form-group">
            <label for="ulke_id">Hedef √úlke *</label>
            <select id="ulke_id" name="ulke_id" required>
              <option value="">√úlke Se√ßiniz...</option>
              <% if (typeof countries !== 'undefined' && countries.length > 0) { %>
                <% countries.forEach(function(country) { %>
                  <option value="<%= country.ulke_id %>" data-iso="<%= country.ISO_KODU %>">
                    <%= country.ulke_adi %> (<%= country.ISO_KODU %>)
                  </option>
                <% }); %>
              <% } %>
            </select>
          </div>
        </div>

        <!-- ADIM 3: Rapor Detaylarƒ± -->
        <div class="form-step">
          <h3 class="step-title">3Ô∏è‚É£ Rapor Detaylarƒ±</h3>
          
          <div class="form-group">
            <label for="analiz_adi">Rapor Adƒ± *</label>
            <input 
              type="text" 
              id="analiz_adi" 
              name="analiz_adi" 
              placeholder="√ñrn: Almanya Otomotiv Sekt√∂r√º 2024 Raporu"
              required
            >
          </div>

          <div class="form-group">
            <label for="aciklama">A√ßƒ±klama / Notlar</label>
            <textarea 
              id="aciklama" 
              name="aciklama" 
              rows="3"
              placeholder="Rapor hakkƒ±nda ek notlar..."
            ></textarea>
          </div>
        </div>

        <div class="form-actions">
          <a href="/dashboard" class="btn btn-secondary">‚Üê ƒ∞ptal</a>
          <button type="submit" class="btn btn-primary">üìä Rapor Olu≈ütur</button>
        </div>
      </form>
    </div>
  </section>
</div>

<style>
  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .stat-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 12px;
    padding: 2rem;
    display: flex;
    align-items: center;
    gap: 1.5rem;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .stat-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
  }

  .stat-icon {
    font-size: 3.5rem;
    opacity: 0.9;
  }

  .stat-content {
    flex: 1;
    color: white;
  }

  .stat-value {
    font-size: 2.8rem;
    font-weight: 700;
    margin-bottom: 0.3rem;
  }

  .stat-label {
    font-size: 1.3rem;
    opacity: 0.9;
    font-weight: 500;
  }

  .form-section {
    max-width: 800px;
    margin: 0 auto;
  }

  .form-card {
    background: #fff;
    border-radius: 1.2rem;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    padding: 3rem;
  }

  .form-step {
    margin-bottom: 2.5rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }

  .form-step:last-of-type {
    border-bottom: none;
    margin-bottom: 1.5rem;
  }

  .step-title {
    font-size: 1.8rem;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 1.5rem;
    font-weight: 700;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #2d3748;
    font-size: 1.4rem;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 1.2rem 1.5rem;
    font-size: 1.4rem;
    border: 2px solid #e2e8f0;
    border-radius: 0.8rem;
    transition: border-color 0.2s;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }

  .form-actions {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>

<script>
  document.getElementById('analysisForm').addEventListener('submit', async (e) => {
    e.preventDefault();

    // Se√ßilen sekt√∂r bilgilerini al
    const sektorSelect = document.getElementById('sektor_id');
    const sektorId = sektorSelect.value;
    const sektorAdi = sektorSelect.options[sektorSelect.selectedIndex].text;

    // Se√ßilen √ºlke bilgilerini al
    const ulkeSelect = document.getElementById('ulke_id');
    const ulkeId = ulkeSelect.value;
    const ulkeOption = ulkeSelect.options[ulkeSelect.selectedIndex];
    const ulkeAdi = ulkeOption.text.split(' (')[0]; // "T√ºrkiye (TR)" -> "T√ºrkiye"
    const ulkeKodu = ulkeOption.dataset.iso; // data-iso attribute

    // Validasyon
    if (!sektorId || !ulkeId) {
      alert('L√ºtfen sekt√∂r ve √ºlke se√ßiniz.');
      return;
    }

    const formData = {
      analiz_adi: document.getElementById('analiz_adi').value || `${ulkeAdi} - ${sektorAdi} Raporu`,
      analiz_tipi: 'detayli_rapor', // Otomatik atanƒ±yor
      parametreler: {
        hedef_sektor_id: parseInt(sektorId),
        hedef_ulke_id: parseInt(ulkeId),
        sektor: sektorAdi,
        ulke: ulkeAdi,
        ulke_kodu: ulkeKodu,
        aciklama: document.getElementById('aciklama').value || ''
      },
      // Sonu√ßlar - ISO kodu ile birlikte (harita i√ßin)
      sonuclar: {
        ulke: ulkeAdi,
        ulke_kodu: ulkeKodu,
        sektor: sektorAdi,
        pazar_skoru: 0
      },
      // TODO: Session'dan kullanƒ±cƒ± ID'si alƒ±nacak
      kullanici_id: 1
    };

    try {
      const response = await fetch('/analyses', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(formData)
      });

      const data = await response.json();

      if (data.status === 'success') {
        alert('‚úÖ Rapor ba≈üarƒ±yla olu≈üturuldu!');
        window.location.href = '/analyses/dashboard';
      } else {
        alert(data.message || 'Rapor olu≈üturulamadƒ±');
      }
    } catch (error) {
      alert('Bir hata olu≈ütu: ' + error.message);
    }
  });
</script>

